// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//Modelos

//-----------------Users-------------------------
model User{
  Id Int @id @default(autoincrement())
  Identification String @unique
  Email String @unique
  IdRol Int 
  IdWallet Int?
  Name String?
  Number String
  Direccion String
  Password String? // Cambia de Buffer a String
  Enabled Boolean
  Orden Orden []
  Cupon Cupon[]
  RecicleCenter RecicleCenter []
  Wallet Wallet? @relation(fields: [IdWallet], references: [Id])
  Role Role @relation(fields: [IdRol], references: [Id])
}

model Role{
  Id Int @id @default(autoincrement())
  Name String
  User User []
}
//----------------Materiales y acopio-------------------
model RecicleCenter{
  Id Int @id @default(autoincrement())
  Name String
  Provincia String
  Canton String
  Distrito String
  Numero String
  Email String
  Schecudale String
  UserAdmin Int @unique
  Enabled Boolean
  User User @relation(fields: [UserAdmin],references: [Id])
  Materials Material[]
  Orden Orden []
}

model Material{
Id Int @id @default(autoincrement())
Name String?
Description String?
Color String?
Unit  String?
Price Decimal?
RecicleCenter RecicleCenter[]
OrdenDetail OrdenDetail[]
}
//-----------Cupons & Coins---------------------------
model Wallet{
  Id Int @id @default(autoincrement())
  IdUser Int @unique
  AvaibleCoins Decimal
  ChangesCoins Decimal
  RecivedCoins Decimal
  User User []
}

model Cupon{
Id Int @id @default(autoincrement())
Name String?
IdUser Int?
Description String
Image String?
ValiteDate DateTime
Price Decimal
Estado Boolean
Category Category[]
User User? @relation(fields: [IdUser], references: [Id])
}

model Category{
Id Int @id @default(autoincrement())
Name String
Cupon Cupon []
}

model Orden{
Id Int @id @default(autoincrement())
IdUser Int
IdCenter Int
Date DateTime
Total Decimal
OrdenDetail OrdenDetail[]
User User @relation(fields: [IdUser],references: [Id])
RecicleCenter RecicleCenter @relation(fields: [IdCenter],references: [Id])

}

model OrdenDetail{
@@id([OrdenId,MaterialId])
OrdenId Int
MaterialId Int
Cantidad Int
Subtotal Decimal
Material Material @relation(fields: [MaterialId],references: [Id])
Orden Orden @relation(fields: [OrdenId],references: [Id])
}